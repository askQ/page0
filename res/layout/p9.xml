<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/widget0"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blablabla of this Q" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q title here" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="starttime show here" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="finish time show here" />

        <EditText
            android:id="@+id/editrext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="what i think  after i choose this item" >

            <requestFocus />
        </EditText>

        <Gallery
            android:id="@+id/gallery"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="204dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:text="全部的結果"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <fragment
                    android:id="@+id/fragment_place"
                    android:name="com.user_vote_pages.Fragment_BG"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:text="只有男生"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <fragment
                    android:id="@+id/fragment_1"
                    android:name="com.user_vote_pages.Fragment_B_only"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:text="只有女生"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <fragment
                    android:id="@+id/fragment_2"
                    android:name="com.user_vote_pages.Fragment_G_only"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp" />

                <ListView
                    android:id="@+id/widget34"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp" >
                </ListView>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="52dp"
                    android:layout_y="309dp"
                    android:text="review show here" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view others" />

    </LinearLayout>

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical" >

     <ImageSwitcher
         android:id="@+id/image_switcher"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" >
     </ImageSwitcher>

     <TextSwitcher
         android:id="@+id/text_switcher"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" >
     </TextSwitcher>

     <TextSwitcher
         android:id="@+id/text_switcher1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" >
     </TextSwitcher>

 </LinearLayout>
 
</AbsoluteLayout>
